<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameStarter"
    android:background="@drawable/background_2_1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="406dp"
        android:layout_height="115dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rightleg"
        android:layout_width="144dp"
        android:layout_height="162dp"
        android:layout_marginStart="212dp"
        android:layout_marginBottom="112dp"
        android:rotation="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/leg2" />

    <ImageView
        android:id="@+id/leftleg"
        android:layout_width="134dp"
        android:layout_height="210dp"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="60dp"
        android:rotation="-15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/leg1" />

    <ImageView
        android:id="@+id/righthand"
        android:layout_width="173dp"
        android:layout_height="254dp"
        android:layout_marginStart="212dp"
        android:layout_marginBottom="296dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/hand2" />

    <ImageView
        android:id="@+id/body"
        android:layout_width="154dp"
        android:layout_height="205dp"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/body" />

    <ImageView
        android:id="@+id/lefthand"
        android:layout_width="128dp"
        android:layout_height="169dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="204dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/hand1" />

    <ImageView
        android:id="@+id/head"
        android:layout_width="224dp"
        android:layout_height="164dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="356dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/face" />

</androidx.constraintlayout.widget.ConstraintLayout>